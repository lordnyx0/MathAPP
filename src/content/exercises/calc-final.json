        {
            "id": "c1-final-q4b",
            "topicId": "calc-final",
            "category": "Derivadas",
            "title": "Q4b: Derivada de 3ˣ·(x² - 2)",
            "difficulty": "Intermediário",
            "problem": "Calcule f'(x) para f(x) = 3ˣ·(x² - 2)",
            "finalAnswer": "3ˣ[ln(3)(x² - 2) + 2x]",
            "steps": [
                {
                    "title": "Passo 1: Regra do Produto",
                    "explanation": "(uv)' = u'v + uv'",
                    "content": "u = 3ˣ → u' = 3ˣ·ln(3)\nv = x² - 2 → v' = 2x"
                },
                {
                    "title": "Passo 2: Aplicar",
                    "explanation": "Substituir na regra.",
                    "content": "f'(x) = 3ˣ·ln(3)·(x² - 2) + 3ˣ·(2x)\n      = 3ˣ[ln(3)(x² - 2) + 2x] ✓"
                }
            ],
            "tips": [
                "d/dx[aˣ] = aˣ·ln(a)"
            ]
        },
        {
            "id": "c1-final-q4c",
            "topicId": "calc-final",
            "category": "Derivadas",
            "title": "Q4c: Derivada de y = ln(x)/x²",
            "difficulty": "Intermediário",
            "problem": "Calcule dy/dx para y = ln(x)/x²",
            "finalAnswer": "(1 - 2ln x)/x³",
            "steps": [
                {
                    "title": "Passo 1: Regra do Quociente",
                    "explanation": "(u/v)' = (u'v - uv')/v²",
                    "content": "u = ln x → u' = 1/x\nv = x² → v' = 2x"
                },
                {
                    "title": "Passo 2: Aplicar",
                    "explanation": "Substituir na regra.",
                    "content": "dy/dx = [(1/x)·x² - ln(x)·2x] / x⁴\n      = [x - 2x·ln(x)] / x⁴\n      = x(1 - 2ln x) / x⁴\n      = (1 - 2ln x) / x³ ✓"
                }
            ],
            "tips": [
                "d/dx[ln x] = 1/x",
                "Simplifique fatorando"
            ]
        },
        {
            "id": "c1-final-q4d",
            "topicId": "calc-final",
            "category": "Derivadas",
            "title": "Q4d: Derivada de y = sen⁴(x² + cos x)³",
            "difficulty": "Avançado",
            "problem": "Calcule dy/dx para y = sen⁴(x² + cos x)³",
            "finalAnswer": "Múltiplas regras da cadeia",
            "steps": [
                {
                    "title": "Passo 1: Interpretar a Expressão",
                    "explanation": "Identificar as camadas.",
                    "content": "y = [sen(u)]⁴ onde u = (x² + cos x)³\nOu: y = sen⁴(v) onde v = (x² + cos x)³\n\nCamadas: (...)⁴ ← sen ← (...)³ ← (x² + cos x)"
                },
                {
                    "title": "Passo 2: Aplicar Regra da Cadeia",
                    "explanation": "Derivar de fora para dentro.",
                    "content": "Seja w = x² + cos x\nv = w³\nu = sen(v)\ny = u⁴\n\ndy/dx = dy/du × du/dv × dv/dw × dw/dx\n\n= 4u³ × cos(v) × 3w² × (2x - sen x)"
                },
                {
                    "title": "Passo 3: Substituir",
                    "explanation": "Voltar às variáveis originais.",
                    "content": "= 4sen³(v) × cos(v) × 3(x²+cos x)² × (2x - sen x)\n\n= 12·sen³[(x²+cos x)³]·cos[(x²+cos x)³]\n  ·(x²+cos x)²·(2x - sen x)"
                }
            ],
            "tips": [
                "Identifique cada função aninhada",
                "Deriva de fora para dentro",
                "d/dx[cos x] = -sen x"
            ]
        }
    ]
