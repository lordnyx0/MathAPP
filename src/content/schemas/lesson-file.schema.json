{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "lesson-file.schema.json",
    "title": "Lesson File",
    "description": "Schema for lesson content files",
    "type": "object",
    "required": [
        "topic",
        "title",
        "lessons"
    ],
    "properties": {
        "topic": {
            "type": "string",
            "description": "Topic identifier matching the registry key"
        },
        "title": {
            "type": "string",
            "description": "Display title for the lesson set"
        },
        "lessons": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/Lesson"
            }
        }
    },
    "definitions": {
        "Lesson": {
            "type": "object",
            "required": [
                "id",
                "title",
                "level",
                "content",
                "questions"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Unique lesson identifier"
                },
                "title": {
                    "type": "string",
                    "description": "Lesson title"
                },
                "level": {
                    "type": "string",
                    "enum": [
                        "Básico",
                        "Intermediário",
                        "Avançado"
                    ],
                    "description": "Difficulty level"
                },
                "content": {
                    "type": "string",
                    "description": "Lesson content with markdown-like formatting"
                },
                "questions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/LessonQuestion"
                    }
                }
            }
        },
        "LessonQuestion": {
            "type": "object",
            "required": [
                "q",
                "a",
                "hint"
            ],
            "properties": {
                "q": {
                    "type": "string",
                    "description": "Question text"
                },
                "a": {
                    "type": "string",
                    "description": "Expected answer"
                },
                "hint": {
                    "type": "string",
                    "description": "Hint to help the student"
                }
            }
        }
    }
}