{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "jsx": "react-native",
        "moduleResolution": "bundler",
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-check"
    ]
}